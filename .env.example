# Core
DJANGO_SECRET_KEY={{DJANGO_SECRET_KEY}}
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=Hatef
DB_USER=postgres
DB_PASSWORD={{DB_PASSWORD}}
DB_HOST=localhost
DB_PORT=5432

# OpenAI
OPENAI_API_KEY={{OPENAI_API_KEY}}
OPENAI_MODEL=gpt-5
# For gpt-5, temperature is fixed at 1. Keep this for gpt-4 family compatibility.
TEMPERATURE=1
# Used as max_completion_tokens when model is gpt-5
MAX_TOKENS=4000

# Google Maps
GOOGLE_MAPS_API_KEY={{GOOGLE_MAPS_API_KEY}}

# Google OAuth2
GOOGLE_OAUTH2_CLIENT_ID={{GOOGLE_OAUTH2_CLIENT_ID}}
GOOGLE_OAUTH2_CLIENT_SECRET={{GOOGLE_OAUTH2_CLIENT_SECRET}}

# Django Sites
SITE_ID=1

